<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:padding="12dp"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <LinearLayout
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
      android:id="@+id/sort_start_time"
      android:gravity="start|center_vertical"
      android:textSize="16sp"
      android:background="@color/white"
      android:textColor="#6F6F6F"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="发时" />

    <ImageView
      android:id="@+id/sort_start_time_indicator"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp"
      android:background="@mipmap/sort_desc"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
  </LinearLayout>

  <LinearLayout
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
      android:id="@+id/sort_arrival_time"
      android:gravity="start|center_vertical"
      android:textSize="16sp"
      android:background="@color/white"
      android:textColor="#6F6F6F"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="到时" />

    <ImageView
      android:id="@+id/sort_arrival_time_indicator"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp"
      android:background="@mipmap/sort_desc"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
  </LinearLayout>

  <LinearLayout
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
      android:id="@+id/sort_consume_time"
      android:gravity="start|center_vertical"
      android:textSize="16sp"
      android:background="@color/white"
      android:textColor="#6F6F6F"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="耗时" />

    <ImageView
      android:id="@+id/sort_consume_time_indicator"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp"
      android:background="@mipmap/sort_desc"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
  </LinearLayout>

  <LinearLayout
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
      android:id="@+id/sort_price"
      android:gravity="start|center_vertical"
      android:textSize="16sp"
      android:background="@color/white"
      android:textColor="#6F6F6F"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="价格" />

    <ImageView
      android:id="@+id/sort_price_indicator"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp"
      android:background="@mipmap/sort_desc"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
  </LinearLayout>
</LinearLayout>
